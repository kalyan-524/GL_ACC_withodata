<Wizard id="createGLWizard">
    <WizardStep title="Basic Data" validated="true">
        <VBox>
            <Label text="Account Number"/>
            <Input value="{newGL>/AccountNumber}"/>
            <Label text="Company Code"/>
            <ComboBox selectedKey="{newGL>/CompanyCode}">
                <core:Item key="1000" text="1000 Company 100"/>
            </ComboBox>
        </VBox>
    </WizardStep>

    <WizardStep title="Account Details">
        <VBox>
            <Label text="Account Type"/>
            <ComboBox selectedKey="{newGL>/AccountType}">
                <core:Item key="PRIM" text="Primary Costs or Revenues"/>
            </ComboBox>
            <Label text="Account Group"/>
            <ComboBox selectedKey="{newGL>/AccountGroup}">
                <core:Item key="PL" text="PL Accounts"/>
            </ComboBox>
        </VBox>
    </WizardStep>

    <WizardStep title="Currency  Description">
        <VBox>
            <Label text="Currency"/>
            <ComboBox selectedKey="{newGL>/Currency}">
                <core:Item key="USD" text="USD"/>
            </ComboBox>
            <Label text="Description"/>
            <TextArea value="{newGL>/Description}"/>
        </VBox>
    </WizardStep>
</Wizard>









