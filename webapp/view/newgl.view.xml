<mvc:View controllerName="ladera.glcreateaccount.controller.newgl"
           xmlns:mvc="sap.ui.core.mvc"
           xmlns="sap.m"
           xmlns:form="sap.ui.layout.form"
           xmlns:uxap="sap.uxap"
           xmlns:core="sap.ui.core">
    <Page id="Newgl" title="GL Reference form">
        <Toolbar>
            <Button text="Back" press="onnavback"/>
        </Toolbar>
 <uxap:ObjectPageLayout showHeaderContent="true" useIconTabBar="false">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader
                objectTitle="Create GL Account"
                isObjectIconAlwaysVisible="false"
                isObjectTitleAlwaysVisible="true"/>
        </uxap:headerTitle>

        <uxap:sections>
            <uxap:ObjectPageSection title="General Information">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
  <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
    <form:content>
        <Label text="Account Number"/>
        <Input value="{newGL>/AccountNumber}"/>

        <Label text="Company Code"/>
        <ComboBox
            items="{
                path: '/CompanyCodeSet'
            }"
            selectedKey="{newGL>/COMPANYCODE}">
            <core:ListItem key="{COMPANYCODE}" text="{COMPANYCODE}" />
        </ComboBox>

        <Label text="Account Name"/>
        <Input value="{newGL>/AccountName}"/>

        <Label text="Account Type"/>
        <ComboBox
            items="{
                path: '/GLAccDataSet'
            }"
            selectedKey="{newGL>/GlaccType}">
            <core:ListItem key="{GlaccType}" text="{GlaccType}" />
        </ComboBox>
    </form:content>
</form:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection title="Additional Details">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection>
                        <uxap:blocks>
                            <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
                                <form:content>
                                    <Label text="Account Group"/>
                                    <ComboBox
            items="{
                path: '/GLAccDataSet'
            }"
            selectedKey="{newGL>/AccountGroup}">
            <core:ListItem key="{AccountGroup}" text="{AccountGroup}" />
        </ComboBox>

                                    <Label text="Currency"/>
                                    <ComboBox
                                        items="{
                                            path: '/GLAccDataSet'
                                        }"
                                selectedKey="{newGL>/AccountCurrency}">
                                <core:ListItem key="{AccountCurrency}" text="{AccountCurrency}" />
        </ComboBox>

                                    <Label text="Description"/>
                                    <TextArea value="{newGL>/Description}"/>
                                </form:content>
                            </form:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>

    <footer>
                <OverflowToolbar>
                    <ToolbarSpacer/>
                    <Button text="Save" type="Emphasized"  press="onsavePress1"/>
                </OverflowToolbar>
            </footer>

    </Page>
</mvc:View>